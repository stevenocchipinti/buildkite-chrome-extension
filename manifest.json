{
  "name": "Buildkite status",
  "description": "Show the status of builds",
  "version": "0.1",
  "background": {
    "scripts": [
      "js/settings.js",
      "js/background.js"
    ]
  },
  "icons": {
    "256": "assets/logo-with-title-square.png"
  },
  "permissions": [
    "tabs", "<all_urls>"
  ],
  "browser_action": {
    "name": "Click to show the status of builds",
    "default_title": "Show the status of builds",
    "default_icon": "assets/logo-disabled.png",
    "default_popup": "pages/popup.html"
  },
  "manifest_version": 2
}
